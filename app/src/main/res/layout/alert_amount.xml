<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white">

    <TextView
        android:id="@+id/amount_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="20dp"
        android:text="请输入收款金额"
        android:textColor="@color/dimgrey" />

    <TextView
        android:id="@+id/amount_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/amount_1"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="12dp"
        android:text="￥"
        android:textColor="#CF000000"
        android:textSize="26sp" />

    <EditText
        android:id="@+id/amount_3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@id/amount_2"
        android:layout_marginLeft="8dp"
        android:layout_toRightOf="@id/amount_2"
        android:background="@null"
        android:hint="0.00"
        android:textColor="#CF000000"
        android:textColorHint="#CF000000"
        android:textSize="28sp" />

    <View
        android:id="@+id/amount_4"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_below="@id/amount_3"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="4dp"
        android:background="#bababa" />

    <Button
        android:id="@+id/amount_5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/amount_4"
        android:layout_margin="20dp"
        android:background="@drawable/blue_btn"
        android:text="OK"
        android:textColor="@color/white"
        android:textSize="18sp" />


</RelativeLayout>